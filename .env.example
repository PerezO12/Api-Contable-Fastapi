# Backend
PROJECT_NAME=API Contable
BACKEND_CORS_ORIGINS=["*"]

# PostgreSQL Database Configuration (reemplaza tu ConnectionString de C#)
DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=api_contable_dev2
DB_USER=postgres
DB_PASSWORD=123456

# Alternativamente, puedes usar una URL completa:
# DATABASE_URL=postgresql://postgres:123456@127.0.0.1:5432/api_contable

# Para producción en GCP, usarías algo como:
# DATABASE_URL=postgresql://user:password@/api_contable_prod?host=/cloudsql/project:region:instance

# JWT Configuration
SECRET_KEY=super-secret-key-change-in-production-must-be-very-long-and-secure
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Configuration
APP_NAME=API Contable
DEBUG=true
ENVIRONMENT=development

# Default Admin User (created on first startup)
DEFAULT_ADMIN_EMAIL=admin@contable.com
DEFAULT_ADMIN_PASSWORD=Admin123!
DEFAULT_ADMIN_FULL_NAME=Administrador Sistema

# OpenAI Configuration
# IMPORTANTE: Obtén tu clave API desde https://platform.openai.com/account/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7
